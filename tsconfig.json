{
    "compilerOptions": {
        "module": "esnext",
        "target": "esnext",
        "lib": ["esnext"],
        "moduleResolution": "node",
        "types": ["@cloudflare/workers-types"],
        "allowSyntheticDefaultImports": true,
        "composite": true,
        "noEmit": true,
        "skipLibCheck": true,
        "strict": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"],
            "@commands/*": ["src/commands/*"],
            "@jargon/*": ["src/jargon/*"],
            "@utils/*": ["src/utils/*"],
            "@server/*": ["src/server/*"],
        }
    },
    "include": ["src", "test", "types"],
    "exclude": ["node_modules", "dist"]
}
